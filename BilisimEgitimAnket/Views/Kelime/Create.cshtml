@model BilisimEgitimAnket.Models.Kelime

@{
    ViewBag.Title = "Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kelime Kayıt </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kelime</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.GID, new { htmlAttributes = new { @class = "form-control createsitil", @Value = ViewBag.GID, @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.GID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SARI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.SARI, new { htmlAttributes = new { @class = "form-control createsitil Sari" } })
                @Html.ValidationMessageFor(model => model.SARI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KIRMIZI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.KIRMIZI, new { htmlAttributes = new { @class = "form-control createsitil Kirmizi" } })
                @Html.ValidationMessageFor(model => model.KIRMIZI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MAVI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.MAVI, new { htmlAttributes = new { @class = "form-control createsitil Mavi" } })
                @Html.ValidationMessageFor(model => model.MAVI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YESIL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.YESIL, new { htmlAttributes = new { @class = "form-control createsitil Yesil" } })
                @Html.ValidationMessageFor(model => model.YESIL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DURUM, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DURUM)
                    @Html.ValidationMessageFor(model => model.DURUM, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.HiddenFor(m => m.OTAR)
        @Html.HiddenFor(m => m.GTAR)

        <div class="form-group">
            <div class="col-md-offset-8 col-md-2">
                <input type="submit" value="Kaydet" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

<div style="float:right;">
    @Html.ActionLink("Listeye Geri Dön", "Listele")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@Styles.Render("~/Content/my/css")