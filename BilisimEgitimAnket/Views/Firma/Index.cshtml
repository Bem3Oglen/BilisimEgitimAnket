@model IEnumerable<BilisimEgitimAnket.Models.Firma>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Firma Kaydı", "Create")
</p>
<table id="tblRecords" class="table">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.FADI)
            </th>
            @*<th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FADRES)
            </th>*@
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.YETKILI)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.TEL1)
            </th>
            @*<th class="text-nowrap">
                @Html.DisplayNameFor(model => model.TEL2)
            </th>*@
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.GSM)
            </th>
            @*<th class="text-nowrap">
                @Html.DisplayNameFor(model => model.FAKS)
            </th>*@
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.EMAIL)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ACIKLAMA)
            </th>
            @*<th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OTAR)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.GTAR)
            </th>*@
            <th data-orderable="false" class="all">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FADI)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FADRES)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.YETKILI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TEL1)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TEL2)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.GSM)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FAKS)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACIKLAMA)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OTAR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GTAR)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" , @role = "button" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
